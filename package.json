{
  "name": "bloodlab-admin-backend",
  "version": "1.0.0",
  "description": "BloodLab Admin Dashboard Backend Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:smoke": "node ./scripts/smoke.js || echo \"Install puppeteer to run smoke tests: npm i -D puppeteer\"",
    "test:staging": "node ./scripts/test-staging.js",
    "open:browser": "node ./scripts/openBrowser.js http://localhost:5000",
    "build": "echo 'No build step required for this project'",
    "deploy:check": "node -e \"console.log('Environment check:', process.env.NODE_ENV || 'development')\"",
    "db:migrate": "node ./scripts/migrate-db.js",
    "db:init": "node -e \"require('./server.js'); console.log('Database initialized');\"",
    "email:setup": "node ./scripts/setup-email.js",
    "health": "curl -f http://localhost:5000/health || exit 1"
  },
  "keywords": [
    "bloodlab",
    "admin",
    "healthcare"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-sqlite3": "^0.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "marked": "^5.1.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "razorpay": "^2.9.6",
    "sqlite3": "^5.1.6",
    "twilio": "^4.23.0"
  },
  "devDependencies": {
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1",
    "puppeteer": "^24.37.2"
  }
}
